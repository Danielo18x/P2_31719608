        <section class="seccion6-contacto" id="contacto">
            <h2> <%= __('s6_title') %> </h2>
            <div class="contacto">
                <div class="Formulario">
                    <form action="/contact#contacto" method="post" id="form">
                        <input class="campo" type="text" placeholder="<%= __('s6_nombre') %>" name="nombre" id="nombre" >
                        <% if (errores) { %>
                            <% errores.forEach(error => { %>
                                <% if (error.path === 'nombre') { %>
                                    <div class="cuadro_error"> <p class="error_mensaje"><%= error.msg %></p> </div>
                                <% } %>
                            <% }) %>
                        <% } %>
                        <input class="campo" type="email" placeholder="<%= __('s6_correo') %>" name="correo" id="correo" value="<%= datos?.correo || '' %>">
                        <% if (errores) { %>
                            <% errores.forEach(error => { %>
                                <% if (error.path === 'correo') { %>
                                    <div class="cuadro_error"> <p class="error_mensaje"><%= error.msg %></p> </div>
                                <% } %>
                            <% }) %>
                        <% } %>
                        <input class="campo" type="tel" placeholder="<%= __('s6_telefono') %>" name="telefono" id="telefono" value="<%= datos?.telefono || '' %>">
                        <% if (errores) { %>
                            <% errores.forEach(error => { %>
                                <% if (error.path === 'telefono') { %>
                                    <div class="cuadro_error"> <p class="error_mensaje"><%= error.msg %></p> </div>
                                <% } %>
                            <% }) %>
                        <% } %>
                        <textarea class="mensaje" placeholder="<%= __('s6_mensaje') %>" name="comentario" id="comentario" value="<%= datos?.comentario || '' %>"></textarea>
                        <% if (errores) { %>
                            <% errores.forEach(error => { %>
                                <% if (error.path === 'comentario') { %>
                                    <div class="cuadro_error"> <p class="error_mensaje"><%= error.msg %></p> </div>
                                <% } %>
                            <% }) %>
                        <% } %>
                        <label class="recaptcha"> <%= __('recaptcha') %>
                            <div class="g-recaptcha" data-sitekey="6LcMPEcrAAAAAMdmnGNBj2bey59YlazEimuxn8tG"></div>
                            <% if (errores) { %>
                                <% errores.forEach(error => { %>
                                    <% if (error.msg && error.msg.includes('Captcha')) { %>
                                        <div class="cuadro_error">
                                            <p class="error_mensaje"><%= error.msg %></p>
                                        </div>
                                    <% } %>
                                <% }) %>
                            <% } %>
                        </label>
                        <button type="submit" class="summit"> <%= __('but_enviar') %> </button>
                    </form>
                </div>
                <div class="Informacion">
                    <div class="direccion">
                        <p> <%= __('s6_dirc') %></p>
                    </div>
                    <div class="links">
                        <p> <strong> üìß<%= __('s6_correo') %>: </strong> <a class="correo" href="mailto:soporte@reparatech.com"> soporte@reparatech.com </a> </p>
                    </div>
